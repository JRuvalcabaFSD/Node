{
  "name": "02-node",
  "version": "0.0.1",
  "description": "Desarrollando en node",
  "main": "app.js",
  "repository": "https://github.com/JRuvalcabaFSD/Node.git",
  "author": "Jesus Ruvalcaba <jruvalcabafsd@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --poll --transpile-only --respawn --cls src/app.ts",
    "build": "rimraf ./dist && tsc",
    "start": "node dist/app.js",
    "test": "yarn migrate:db:test && jest",
    "test:watch": "yarn migrate:db:test && CHOKIDAR_USEPOLLING=true jest --watchAll",
    "test:coverage": "jest --coverage",
    "docker:build:staging": "docker buildx build --no-cache --platform linux/amd64,linux/arm64/v8 --build-arg ENVFILE=staging.env -t jruvalcabafsd/curso_node .",
    "docker:build:prod": "docker buildx build --no-cache --platform linux/amd64,linux/arm64/v8 --build-arg ENVFILE=prod.env -t jruvalcabafsd/curso_node .",
    "app:up": "docker compose up -d",
    "app:down": "docker compose down",
    "migrate:db:test": "dotenv -e .env.test -- npx prisma migrate deploy",
    "migrate:db:prod": "prisma migrate deploy"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prisma": "^6.5.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@prisma/client": "6.5.0",
    "compression": "^1.8.0",
    "dotenv": "^16.4.7",
    "env-var": "^7.5.0",
    "express": "^5.1.0"
  }
}
